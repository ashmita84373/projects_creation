result=0
print(" You have to enter two operands and the operator for which you want to perform operation on the two operands")
num_1= int(input("Enter first operand"))
num_2= int(input("Enter second operand"))
choice= int(input("Select the operator 1) Addition(+) ,2) Subtraction(-) ,3) Multiplication(*) ,4)Division(/) , 5)Modular(%)  write only number 1,2,3,4,5")) 
if choice==1:
    result=num_1+num_2 
    print(result)
elif choice==2:
    result=num_1-num_2
    print(result)
elif choice==3:
    result=num_1*num_2
    print(result)
elif choice==4:
    if num_2==0:
        print("not possible to divide by 0 as something divide by zero  will becomes  infinite")
    else:

        result=num_1/num_2
        print(result)
elif choice==5:
    result=num_1%num_2
    print(result)
else:
    print("invalid operation")
